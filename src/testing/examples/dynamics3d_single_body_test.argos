<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <experiment length="0" ticks_per_second="25" random_seed="1"/>
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers/>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="0.5, 0.5, 1" center="0, 0, 0.5">
    <box id="bn" size="0.025,0.475,0.025" movable="false" mass="10">
      <body position="0.2375,0.0125,0"  orientation="0,0,0" />
    </box>
    <box id="be" size="0.475,0.025,0.025" movable="false" mass="10">
      <body position="0.0125,-0.2375,0"  orientation="0,0,0" />
    </box>
    <box id="bs" size="0.025,0.475,0.025" movable="false" mass="10">
      <body position="-0.2375,-0.0125,0"  orientation="0,0,0" />
    </box>
    <box id="bw" size="0.475,0.025,0.025" movable="false" mass="10">
      <body position="-0.0125,0.2375,0"  orientation="0,0,0" />
    </box>
    <distribute>
      <position method="uniform" min="-0.15,-0.15,0.05" max="0.15,0.15,0.9" />
      <orientation method="uniform" min="0,0,0" max="360,360,360" />
      <entity quantity="100" max_trials="100" base_num="1000">
        <box id="b0" size="0.01,0.01,0.01" movable="true" mass="0.05"/>
      </entity>
    </distribute>
    <distribute>
      <position method="uniform" min="-0.15,-0.15,0.05" max="0.15,0.15,0.9" />
      <orientation method="uniform" min="0,0,0" max="360,360,360" />
      <entity quantity="100" max_trials="100" base_num="2000">
        <cylinder id="c0" height="0.01" radius="0.005" movable="true" mass="0.05"/>
      </entity>
    </distribute>
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics3d id="dyn3d" iterations="20">
      <floor />
      <gravity g="9.8" />
    </dynamics3d>
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media/>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl lua_editor="false" show_boundary="false">
      <camera>
        <placements>
          <placement index="0" position=" 0,   -1.25,0.5" look_at="0,0,0.05" lens_focal_length="78" />
          <placement index="1" position=" 1.25,-1.25,0.6" look_at="0,0,0.05" lens_focal_length="92" />
          <placement index="2" position=" 1.25, 0,   0.5" look_at="0,0,0.05" lens_focal_length="78" />
          <placement index="3" position=" 1.25, 1.25,0.6" look_at="0,0,0.05" lens_focal_length="92" />
          <placement index="4" position=" 0,    1.25,0.5" look_at="0,0,0.05" lens_focal_length="78" />
          <placement index="5" position="-1.25, 1.25,0.6" look_at="0,0,0.05" lens_focal_length="92" />
          <placement index="6" position="-1.25, 0,   0.5" look_at="0,0,0.05" lens_focal_length="78" />
          <placement index="7" position="-1.25,-1.25,0.6" look_at="0,0,0.05" lens_focal_length="92" />
          <placement index="8" position="0,0,0.5" look_at="0.0,0.0,0.125" up="0,1,0" lens_focal_length="40"/>
        </placements>
        <timeline loop="160">
          <keyframe placement="2" step="20" />
          <interpolate />
          <keyframe placement="8" step="60" />
          <interpolate />
          <keyframe placement="6" step="100" />
          <interpolate />
          <keyframe placement="8" step="140" />
          <interpolate />
        </timeline>
      </camera>
    </qt-opengl>
  </visualization>

</argos-configuration>
